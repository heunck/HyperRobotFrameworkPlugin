    <!--        <listener class="com.github.jnhyperion.hyperrobotframeworkplugin.listeners.MyProjectManagerListener"-->
    <!--                  topic="com.intellij.openapi.project.ProjectManagerListener"/>-->
    <!--    </applicationListeners>-->
</idea-plugin>
